<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.oraclechain.pe4devs">

    <!-- 访问网络，网络定位需要上网 -->
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name="com.oraclechain.pe4devs.app.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name="com.oraclechain.pe4devs.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="com.oraclechain.pe4devs.activity.DappActivity">
        </activity>
        <activity android:name="com.oraclechain.pe4devs.activity.SetWalletInfoActivity">
        </activity>
        <activity android:name="com.oraclechain.pe4devs.activity.MapAccountActivity">
        </activity>
    </application>

</manifest>